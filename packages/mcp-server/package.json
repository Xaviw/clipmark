{
  "name": "@clipmark/mcp-server",
  "version": "0.1.0",
  "private": true,
  "description": "ClipMark MCP Server",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "clipmark-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/server/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@clipmark/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "pino-pretty": "^11.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
